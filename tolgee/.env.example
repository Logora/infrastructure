# Database configuration (using internal PostgreSQL service)
TOLGEE_POSTGRES_HOST=tolgee-postgresql
TOLGEE_POSTGRES_PORT=5432
TOLGEE_POSTGRES_USER=tolgee
TOLGEE_POSTGRES_PASSWORD=tolgee
TOLGEE_POSTGRES_DATABASE=tolgee

# JWT Secret (generate random string)
TOLGEE_JWT_SECRET=your-jwt-secret-key

# Initial admin user
TOLGEE_INITIAL_USERNAME=admin
TOLGEE_INITIAL_PASSWORD=your-admin-password

# Optional SMTP configuration
TOLGEE_SMTP_HOST=your-smtp-host
TOLGEE_SMTP_PORT=587
TOLGEE_SMTP_USERNAME=your-smtp-user
TOLGEE_SMTP_PASSWORD=your-smtp-password
TOLGEE_SMTP_FROM=noreply@logora.fr

# Optional machine translation APIs
TOLGEE_GOOGLE_API_KEY=your-google-translate-api-key
TOLGEE_AWS_ACCESS_KEY=your-aws-access-key
TOLGEE_AWS_SECRET_KEY=your-aws-secret-key
TOLGEE_AZURE_API_KEY=your-azure-translator-api-key
